#!/usr/bin/env bash
set -e
cd "$(dirname "${BASH_SOURCE[0]}")"

cc -o game \
        src/client/*.cpp \
        src/client/models/*.cpp \
        src/shared/*.cpp \
        external/lodepng/lodepng.cpp \
    -Iexternal/lodepng \
    -Iexternal/glm \
    -std=c++14 \
    -lstdc++ \
    -lglfw \
    -framework OpenGL
#   -O3 \

./game
