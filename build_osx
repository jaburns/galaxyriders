#!/usr/bin/env bash
set -e
cd "$(dirname "${BASH_SOURCE[0]}")"

cc -o game \
        src/client/*.cpp \
        src/client/renderer/*.cpp \
        src/client/gen/*.cpp \
        src/shared/*.cpp \
        external/lodepng/lodepng.cpp \
        external/tinyxml2/tinyxml2.cpp \
    -Iexternal/lodepng \
    -Iexternal/glm \
    -Iexternal/tinyxml2 \
    -std=c++14 \
    -lstdc++ \
    -lglfw \
    -framework OpenGL

[ -z "$1" ] || ./game
